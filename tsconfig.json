{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./app/",
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "target": "es6",
    "pretty": true,
    "experimentalDecorators": true,
    "paths": {
      "app": [ "./app" ]
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "*.test.ts"
  ],
  "include": [
    "./app/**/*"
  ]
}
